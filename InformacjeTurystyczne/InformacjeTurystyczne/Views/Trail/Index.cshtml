            <th>
                @Html.DisplayFor(modelItem => item.IdTrail)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Colour)
            </th>

            <th>
                @Html.DisplayFor(modelItem => item.Open)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Feedback)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Length)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Difficulty)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Description)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTrail">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTrail">Details</a> |
