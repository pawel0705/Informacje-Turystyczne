
@model dynamic


<h1>Wszystkie role</h1>
<a asp-action="CreateRole">Utwórz rolę</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
    @foreach (var role in (IEnumerable<IdentityRole>)Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td i-role="@role.Id"></td>
            
            <td><a asp-action="UpdateRole" asp-route-id="@role.Id">Aktualizuj</a></td>
            <td>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                    <button type="submit"> Usuń </button>
                </form>
            </td>
        </tr>
    }
</table>